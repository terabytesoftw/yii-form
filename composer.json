{
    "name": "yiisoft/form",
    "type": "library",
    "description": "The package helps with implementing data entry forms.",
    "keywords": [
        "yii",
        "form"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/form/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/form"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "yiisoft/html": "^3.0@dev",
        "yiisoft/http": "^1.0",
        "yiisoft/strings": "^1.0",
        "yiisoft/validator": "^3.0@dev",
        "yiisoft/widget": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "roave/infection-static-analysis-plugin": "^1.5",
        "vimeo/psalm": "^4.1",
        "yiisoft/di": " ^3.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Form\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Form\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "phpunit --colors --no-interaction"
        ]
    }
}
